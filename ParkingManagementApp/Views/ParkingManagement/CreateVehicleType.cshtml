@model ParkingManagementApp.Models.CreateVehicleTypeMasterModel
@{
    ViewBag.Title = "CreateVehicleType";
}

<h2>Create Vehicle Type</h2>


<div class="container">

    @using (Html.BeginForm("CreateVehicleType", "ParkingManagement"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @ViewBag.Message

            <hr />

            <div class="form-group">
                @Html.LabelFor(model => model.SlotTypeId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-sm-10">
                    @*@Html.DropDownListFor(model => model.SlotTypeId,Model.SlotTypeList,"Please select", new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })*@
                    @Html.DropDownListFor(m => m.SlotTypeId, Model.SlotTypeList, "Please select", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SlotTypeId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.VehicleType, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-sm-10">

                    @Html.EditorFor(model => model.VehicleType, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.VehicleType, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </div>
        </div>
    }

</div>



<div class="container">
    <table class="table">
        <thead>
            <tr>
                <td>VehicleTypeId</td>
                <td>VehicleType</td>
            </tr>
        </thead>
        <tbody>
            @if (Model.VehicleTypeList != null)
            {
                foreach (var item in Model.VehicleTypeList)
                {
                    <tr>
                        <td>@item.Value</td>
                        <td>@item.Text</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    No Data Found
                </tr>
            }
        </tbody>
    </table>
</div>


