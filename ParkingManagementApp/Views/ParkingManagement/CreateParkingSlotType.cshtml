@model ParkingManagementApp.Models.CreateParkingSlotTypeMasterModel
@{
    ViewBag.Title = "CreateParkingSlotType";
}

<h2>Create Parking Slot Type</h2>


<div class="container">

    @using (Html.BeginForm("CreateParkingSlotType", "ParkingManagement"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @ViewBag.Message

            <hr />

            <div class="form-group">
                @Html.LabelFor(model => model.SlotType, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.SlotType, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.SlotType, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </div>
        </div>
    }

</div>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <td>SlotTypeId</td>
                <td>SlotType</td>
            </tr>
        </thead>
        <tbody>
            @if (Model.SlotTypeList != null)
            {
                foreach (var item in Model.SlotTypeList)
                {
                    <tr>
                        <td>@item.Value</td>
                        <td>@item.Text</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    No Data Found
                </tr>
            }
        </tbody>
    </table>
</div>

